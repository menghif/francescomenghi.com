---
const { platform, link } = Astro.props;
---

<li>
  <!-- verfied badge for Mastodon rel="me" -->
  {
    platform === "Mastodon" ? (
      <a rel="me" class="social-link" href={link}>
        <slot class="icon" />
        <span class="text hover-underline">{platform}</span>
      </a>
    ) : (
      <a href={link}>
        <slot class="icon" />
        <span class="text hover-underline">{platform}</span>
      </a>
    )
  }
</li>

<style>
  a {
    display: flex;
    font-size: 1.3rem;
    border-radius: 0.9rem;
    text-decoration: none;
    gap: 0.6rem;
    padding: 0.5rem;
    align-items: center;
    width: 10rem;
  }

  @media screen and (min-width: 700px) {
    a {
      width: inherit;
    }
  }
</style>
