---
const currentPage = Astro.url.pathname.split("/")[1];
const pages = [
  { title: "About", url: "/about" },
  { title: "Projects", url: "/projects" },
  { title: "Blog", url: "/blog" },
];
---

<div class="nav-links">
  {
    pages.map((page) => (
      <a
        href={page.url}
        class={currentPage === page.url.split("/")[1] ? "active" : ""}
      >
        {page.title}
      </a>
    ))
  }
</div>

<style>
  .nav-links {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
  }

  .nav-links a {
    padding: 0.25rem 0.6rem;
    border-radius: 0.6rem;
    text-decoration: none;
    font-weight: 500;
  }

  .active {
    background-color: var(--surface4);
  }

  .nav-links > :not(.active) {
    opacity: 80%;
  }
</style>
